<section class="clean-block clean-blog-list dark">
    <div class="container">
        <div class="block-heading">
            <h1 class="text-i">Управление заказами</h1>
        </div>
    
        @foreach (var order in Model)
        {
            <form>
                <div class="form-group">
                    <h4>
                        <p>
                            <label style="font-weight: inherit !important;" class="text-info">Номер заказа: @order.OrderId</label>
                        </p></h4>
                    <form>
                    @if (order.Active)
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Статус заказа: заказ активен</label><br/>
                                        <a type="button" class="my-class" onclick="changeStatus(@(order.Active.ToString().ToLower()),'Active',@(order.OrderId))">Сделать заказ неактивным</a>
                                    </p></h4>
                                }
                    else
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Статус заказа: заказ неактивен</label>
                                    </p></h4>
                                }
                    </form> 
                    <form>
                                @if (order.IsForPickUp)
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Самовывоз</label>
                                    </p></h4>
                                }
                                else
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Доставка</label>
                                    </p></h4>
                                }
                    </form>
                    <form>
                                @if (!order.Delivered)
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Доставка: заказ не доставлен</label><br/>
                                        <a type="button" class="my-class" onclick="changeStatus(@(order.Delivered.ToString().ToLower()),'Delivered',@(order.OrderId))">Сменить статус на "Доставлен"</a>
                                    </p></h4>
                                }
                                else
                                {
                                    <h4><p>
                                        <label style="font-weight: inherit !important;" class="text-info">Доставка: заказ доставлен</label>
                                    </p></h4>
                                }
                                </form>
                    <form>
                        @if (!order.Paid)
                        {
                            <h4><p>
                                <label style="font-weight: inherit !important;" class="text-info">Оплата: заказ не оплачен</label><br/>
                                <a type="button" class="my-class" onclick="changeStatus(@(order.Paid.ToString().ToLower()),'Paid',@(order.OrderId))">Сменить статус на "Оплачен"</a>
                            </p></h4>
                        }
                        else
                        {
                            <h4><p>
                                <label style="font-weight: inherit !important;" class="text-info">Оплата: заказ оплачен</label>
                            </p></h4>
                        }
                            
                    </form>
                    <form>
                        <strong class="text-info"><h4>@order.Price руб.</h4></strong>  
                    </form>
                    <form>
                        <a class="my-class" href="/Order/ShowOrderInfo?orderId=@order.OrderId"><h4>Перейти к заказу</h4></a>
                    </form>
                    
                </div>
            </form>
            <br/>
        }
      
    </div>
</section>