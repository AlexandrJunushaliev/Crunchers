@using (Html.BeginForm("UploadFiles", "FileUpload", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()


    <section class="clean-block clean-blog-list dark text-info">
        @Html.ValidationSummary(true, "", new {@class = ""})
        <div>
            <h3>
                @Html.LabelFor(model => model.File, htmlAttributes: new {@class = "text-info"})
            </h3>
            @Html.EditorFor(model => model.File, new {htmlAttributes = new {@class = "", @type = "file"}})
            @Html.ValidationMessageFor(model => model.File, "", new {@class = ""})
            <br/>
            <input type="hidden" name="categoryId" value="@ViewBag.categoryId"/>
            <input style="color: orange; background: white; border-color: orange" type="submit" value="Upload" class="btn btn-primary"/>
            <br/>
            @ViewBag.fileStatus
        </div>
    </section>
}

@if (ViewBag.link != null && ViewBag.categoryId != null)
{
    <section class="clean-block clean-blog-list dark text-info">
        <form method="get" action="/Admin/ManageCategoryProducts">
            <input type="hidden" name="categoryId" value="@ViewBag.categoryId"/>
            <input type="hidden" name="imageLink" value="@ViewBag.link" }/>
            <input type="submit" value="Return to fill product information"/>
        </form>
    </section>
}

